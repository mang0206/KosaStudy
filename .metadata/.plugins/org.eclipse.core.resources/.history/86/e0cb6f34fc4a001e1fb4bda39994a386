package day13;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.time.LocalDate;
import java.time.format.TextStyle;
import java.util.Locale;


public class FileOutLab {
	public static void main(String[] args) {
		LocalDate targetDate = LocalDate.of(2023, 12, 25);
		System.out.println(targetDate.getDayOfWeek());
		System.out.println(targetDate.getDayOfWeek().getDisplayName(TextStyle.SHORT, Locale.KOREAN));
		FileWriter writer = null;
		String path = "c:/Temp";
		File isDir = new File(path);
		if (!isDir.exists()) {
			isDir.mkdirs();
		}
		try {
			writer = new FileWriter(path + "/output.txt");
			writer.write(targetDate.getDayOfWeek().getDisplayName(TextStyle.SHORT, Locale.KOREAN));
			writer.write("1234567869");
			System.out.println("저장이 완료되었습니다.");
		} catch (IOException ioe) {
			System.out.println("파일에 저장하는 동안 오류가 발생했습니다.");
		}

	}

}
